<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.Fab_Bottom_app_bar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/smiles_orange</item>
        <item name="colorPrimaryVariant">@color/smiles_purple</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>


    <style name="DefaultTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/architectdaughter_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="DefaultTextView.Small" parent="DefaultTextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DefaultTextView.Medium" parent="DefaultTextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DefaultTextView.Large" parent="DefaultTextView">
        <item name="android:textSize">20sp</item>
    </style>


</resources>